                                        a.align-items-center(href=val.href)
                                            span.circle(class=val.bg)
                                                +icon(val.icon)
                                            span.fs-14=val.text
                                li
                                    a.align-items-center(href='tel:0443842565')
                                        span.circle.bg-red
                                            +icon('phone')
                                        span
                                            span.fs-17 (044) 384-25-65
                                            span.fs-12.c-gray-light.d-block пн-пт 09:00 - 19:00
                            a.btn.d-xl-block.d-none(href='#') Консультация
                    form.search 
                        input(type='text' placeholder='Поиск товаров' required)
                        button.btn-search(type='submit')
                            +icon('magnifier')
                        .search-drop 
                            ul 
                                -var n = 3
                                -while(n--)
                                    li.isVisible 
                                        a.align-items-center(href='#')
                                            img(src='img/common/product.png' alt='product image')
                                            span Котел твердопаливний 
                                                span.d-block KRONAS EKO  
                                li.d-none 
                                    a.align-items-center(href='#')
                                        img(src='img/common/product.png' alt='product image')
                                        span Котел твердопаливний 
                                            span.d-block KRONAS EKO 
                            button.fs-14.search-more(type='button') показать все 
                                span.d-sm-inline.d-none результаты поиска

                    nav.navbotom.stopPropagation 
                        ul.flex-center-around 
                            each val, index in [{name: 'Вхід', icon: 'user'},{name: 'Обране', icon: 'heart'},{name: 'Калькулятор', icon: 'calculate.svg'}]
                                li(class=index==3 ? 'd-xl-none': '')
                                    a(href='#')
                                        if (index==2)
                                            img(src='img/common/'+val.icon)
                                        else
                                            +icon(val.icon)
                                        span.d-xl-none.d-block=val.name
                            li.d-xl-none(data-button='messenger')
                                a(href='#')
                                    +icon('phone2')
                                    span.d-xl-none.d-block Подзвонити
                    
                    .btn-cart
                        .btn-cart_item(data-button='cart')
                            +icon('cart')
                            p 1
                        .cart-popup(data-item='cart' data-button='cart')
                            .cart-popup_container.stopPropagation
                                .flex-center-between
                                    h2.fs-20.fw-medium Корзина
                                    button.d-sm-none(type="button" data-button='cart')
                                        +icon('close2')
                                ul.cart-list 
                                    li.justify-content-between 
                                        a.cart-list_img(href="#")
                                            img(src='img/common/category6.png' alr='product')
                                        .flex-sm-row.flex-column.justify-content-between
                                            .cart-list_title
                                                a(href='#') ALTEP TRIO UNI PLUS (КТ-3ЕN)
                                                p.fs-13.c-gray-500 Артикул 11294038
                                            .d-sm-block.align-items-end.flex-wrap
                                                p.fs-12.text-through.c-dark.d-block.text-nowrap 13800 грн
                                                p.fs-18.c-red.fw-medium.lh-1.text-nowrap 12500 грн
                                        button.btn-delete(type='button')
                                            +icon('delete')
                                .cart-popup_total.justify-content-sm-end.d-flex
                                    p.fs-12.mr-15 Всього без доставки:
                                    div
                                        p.fs-12.text-through.c-dark.d-block.text-nowrap 13800 грн
                                        p.fs-18.c-red.fw-medium.lh-1 12500 грн
                                a.btn.big-xl(href='#') Оформить заказ
                                button.d-sm-none.fs-12.text-center.mt-20.w-100(type='button' data-button='cart') Продолжить покупки

