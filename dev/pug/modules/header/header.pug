    .header-c 
        .container
            .align-items-center
                .header_left
                    button.burger(type="button")
                    a.logo.d-xl-block.d-none(href='#')
                .header_right.flex-center-between
                    .messenger.relative.stopPropagation(data-item='messenger' data-button='messenger')
                        .align-items-center.messenger-item(data-toggle)
                            +icon('phone2')
                            p (044) 384-25-65 
                            +icon('arrow-down')
